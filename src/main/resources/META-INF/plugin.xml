<idea-plugin>
	<id>com.palg</id>

	<!-- Text to display as name on Settings | Plugin page -->
	<name>PALG: Programming Activity Log Generator</name>

	<!-- Indicate this plugin can be loaded in all IntelliJ Platform-based products. -->
	<depends>com.intellij.modules.platform</depends>

	<!-- Text to display as description on Settings | Plugin page -->
	<description>
		<![CDATA[
      Programming Activity Log Generator.
      Generates JSON log files based on user activity.
    ]]>
	</description>

	<vendor url="https://github.com/Programming-Activity-Log-Analyser/PALG">Rene KÃ¼tt</vendor>

	<projectListeners>
		<listener class="com.palg.PalgListener"
		          topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
		<listener class="com.palg.PalgListener"
		          topic="com.intellij.execution.ExecutionListener"/>
	</projectListeners>

	<extensions defaultExtensionNs="com.intellij">
		<editorFactoryDocumentListener implementation="com.palg.PalgListener"/>
		<copyPastePreProcessor implementation="com.palg.PalgListener"/>
	</extensions>
</idea-plugin>
